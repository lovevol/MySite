<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ShareMapper">
    <insert id="saveWeb" parameterType="model.Web" useGeneratedKeys="true">
        INSERT INTO web(weburl,description,remark,label) VALUES (#{webUrl},#{description},#{remark},#{label})
    </insert>
    <select id="selectWeb" resultType="model.Web">
        SELECT * from web
    </select>
    <insert id="saveEbook" parameterType="model.Ebook" useGeneratedKeys="true">
        INSERT INTO ebook(bookName,description,path) VALUES (#{bookName},#{description},#{path})
    </insert>
    <select id="selectEbook" resultType="model.Ebook">
        SELECT * FROM ebook
    </select>
    <insert id="saveArticle" parameterType="model.Article" useGeneratedKeys="true">
        INSERT INTO article(title,content,date,label,category,sketch,imagepath) VALUES (#{title},#{content},#{date},#{label},#{category},#{sketch},#{imagePath})
    </insert>
    <select id="selectArticleForIndex" resultType="model.Article">
        SELECT * FROM article ORDER BY date DESC LIMIT 5;
    </select>
    <select id="selectArticleById" parameterType="int" resultType="model.Article">
        SELECT * FROM article WHERE idarticle = #{id}
    </select>
</mapper>