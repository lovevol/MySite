<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ArticleMapper">
    <insert id="saveArticle" parameterType="model.Article" useGeneratedKeys="true">
        INSERT INTO article(title,content,date,idlabel,idcategory,sketch,imagepath) VALUES (#{title},#{content},#{date},#{label.idLabel},#{category.idCategory},#{sketch},#{imagePath})
    </insert>
    <resultMap id="articleMap" type="model.Article">
        <id column="idarticle" property="idArticle"/>
        <result property="content" column="content"/>
        <result property="date" column="date"/>
        <result property="imagePath" column="imagepath"/>
        <result property="sketch" column="sketch"/>
        <association property="category" column="idcategory" fetchType="eager"
            select="selectCategoryById"/>
        <association property="label" column="idlabel" fetchType="eager"
                     select="selectLabelById"/>
     </resultMap>
    <select id="selectArticleForIndex" resultMap="articleMap">
        SELECT * FROM article ORDER BY date DESC LIMIT 5;
    </select>
    <select id="selectArticleById" parameterType="int" resultMap="articleMap">
        SELECT * FROM article WHERE idarticle = #{id}
    </select>
</mapper>